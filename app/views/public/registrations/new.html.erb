<div class="container">
  <div class="badge badge-light ml-2 my-3">
  <h4>新規会員登録</h4>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
  
  <div class="row mb-2">
     <div class="col-md-4">
        <%= f.label :"名前"%>
     </div>
     <div class="col-md-8 field">
          <%= f.label :"(姓)　"%>
          <%= f.text_field :first_name, autofocus: true %>
          <%= f.label :"(名)　"%>
          <%= f.text_field :last_name %>
     </div>
  </div>  
  
  <div class="row mb-2">
     <div class="col-md-4">
        <%= f.label :"フリガナ"%>
     </div>
     <div class="field col-md-8">
          <%= f.label :"(セイ)" %>
          <%= f.text_field :furigana_first_name %>
          <%= f.label :"(メイ)"%>
          <%= f.text_field :furigana_last_name %>
     </div>
  </div>  
  
  <div class="row mb-2">
     <div class="col-md-4">
        <%= f.label :"メールアドレス"%>
     </div>
     <div class="field col-md-8">
          <%= f.label :"　  　"%>
          <%= f.email_field :email, autocomplete: "email" %>
     </div>
  </div>
  
  <div class="row mb-2">
     <div class="col-md-4">
        <%= f.label :"郵便番号(ハイフンなし)"%>
     </div>
     <div class="field col-md-8">
        <%= f.label :"　  　"%>
        <%= f.text_field :postcode %>
     </div>
  </div>
  
  <div class="row mb-2">
     <div class="col-md-4">
        <%= f.label :"住所"%>
     </div>
     <div class="field col-md-8">
        <%= f.label :"　  　"%>
        <%= f.text_field :address %>
     </div>
  </div> 
  
  <div class="row mb-2">
     <div class="col-md-4">
        <%= f.label :"電話番号(ハイフンなし)"%>
     </div>
     <div class="field col-md-8">
        <%= f.label :"　  　"%>       
        <%= f.text_field :phone_number %>
     </div>
  </div>  
  
  <div class="row mb-2">
     <div class="col-md-4">
        <%= f.label :"パスワード(6文字以上)"%>
     </div>
     <div class="field col-md-8">
        <%= f.label :"　  　"%>
        <%= f.password_field :password, autocomplete: "new-password" %>
     </div>
  </div>  
  
  <div class="row mb-2">
     <div class="col-md-4">
        <%= f.label :"パスワード(確認用)"%>
     </div>
     <div class="field col-md-8">
        <%= f.label :"　  　"%>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        <div class="action my-4">
        <%= f.label :"　  　"%>
        <%= f.submit "新規登録",class:"btn btn-success"%>
        </div>
     </div>
  </div>  
  
  
  <% end %>
  <div class="badge badge-light ml-2 my-3">
  <h4>既に登録済みの方</h4>
  </div>
  <%= render "public/shared/links" %>
</div>