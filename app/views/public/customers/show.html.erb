<% if flash[:notice] %>
    <p class="alert alert-success">
      <%= flash[:notice] %>
    </p>
<% end %>

<div class="container">
  <div class="badge badge-light my-4">
    <h3>マイページ</h3>
  </div>
  <div class="row">
    <h4 class="col-2">登録情報</h4>
    <%= link_to "編集する",edit_customers_path,class:"btn btn-success"%>
  </div>
    <table class="table table-bordered my-3">
        <tr>
            <th>氏名</th>
            <!--2021/5/18 Error lasta_name for nil current_customerの設定？ ← ログインしていないから当然？-->
            <td><%= current_customer.full_name%></td>
        </tr>
        <tr>
            <th>カナ</th>
            <td><%= current_customer.furigana_full_name%></td>
        </tr>
        <tr>
            <th>郵便番号</th>
            <td><%= current_customer.postcode%></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%= current_customer.address%></td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td><%= current_customer.phone_number%></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= current_customer.email%></td>
        </tr>
    </table>
    
    <div class="row mt-3">
    　<h4 class="col-2">配送先</h4>
    　<%= link_to "一覧を見る",deliveries_path,class:"btn btn-primary"%>
    </div>
    
    <div class="row mt-2">
    　<h4 class="col-2">注文履歴</h4>
    　<%= link_to "一覧を見る",orders_path,class:"btn btn-primary"%>
 　 </div>
 　 
</div>