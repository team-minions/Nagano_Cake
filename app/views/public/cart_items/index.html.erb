<div class="container">

  <div class="row">
    <h4 class="col-md-3 offset-1 bg-light text-center mt-2">ショッピングカート</h4>
    <%= link_to "カートを空にする",carts_items_destroy_all_path, method: :delete, class:"btn btn-danger" %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
         </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= cart_item.product.name %></td>
              <td><%= cart_item.product.price * @tax %></td>
              <!--<td><%#= @tax_include %></td>-->
              <td>
                <%= form_with model: @cart_item do |f| %>
                  <%= f.select :product_count, [*1..100] %>
                  <%= f.submit "変更する", class:"btn btn-primary btn-block btn-base-1 mb-3" %>
                <% end %>
              </td>
              <!--<td><%#= cart_item.product_count * product.price * @tax%>円</td>-->
              <td><%= link_to "削除する", cart_item_path(@cart_item.id), method: :delete, class:"btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <table>
        <tr>
          <th>合計金額</th>
          <td><%= @cart_itemcart_item_sum %></td>
        </tr>
      </table>
      <%= link_to '買い物を続ける', products_path, class: "btn btn-sm btn-primary" %>
      <%= link_to '情報入力に進む', new_order_path, class: "btn btn-sm btn-success" %>
  </div>
</div>