<div class="container">

  <div class="row">

    <h2 class="mt-3">配送先登録/一覧</h2>
    <%= form_with model:@delivery, local:true do |f| %>
      <div class="form-group">
        <h6 class="delivery_postcode">郵便番号</h6>
        <%= f.text_area :postcode %>
      </div>
      <div class="form-group">
        <h6 class="delivery_address">住所</h6>
        <%= f.text_area :postcode %>
      </div>
      <div class="form-group">
        <h6 class="delivery_name">宛名</h6>
        <%= f.text_area :postcode %>
      </div>
        <%= f.submit '新規登録', class: "btn btn- btn btn-success" %>
    <% end %>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>

            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @deliveries.each do |delivery| %>
            <tr>
              <td><%= delivery.postcode %></td>
              <td><%= delivery.address %></td>
              <td><%= delivery.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>