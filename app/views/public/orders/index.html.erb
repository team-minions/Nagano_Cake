<div class="container">
    <div class="row">
        <div class="">注文履歴一覧</div>
        <table>
            <tr>
                <td>注文日</td>
                <td>配送先</td>
                <td>注文商品</td>
                <td>支払金額</td>
                <td>ステータス</td>
                <td>注文詳細</td>
            </tr>
            <%= @orders.each do |order| %>
            <tr>
                <td><%= order.created_at %></td>
                <td>〒<%= order.delivery_postcode %><br/>
                    <%= order.delivery_address %><br/>
                    <%= order.delivery_name %>
                </td>
                <td><%= @order_items.each do |order_item| %>
                    <%= order_item %>
                    <% end %>
                </td>
                <td><%= order.pay_amount %></td>
                <td><%= order.status %></td>
                <td><%= link_to order_path(order.id), class:"btn "%></td>
            </tr>
            <% end %>
        </table>
    </div>
</div>