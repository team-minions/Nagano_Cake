<div class="container">
    <div class="row">
        <div class="">注文履歴一覧</div>
        <table class="table-bordered">
            <tr>
                <td>注文日</td>
                <td>配送先</td>
                <td>注文商品</td>
                <td>支払金額</td>
                <td>ステータス</td>
                <td>注文詳細</td>
            </tr>
            
            <% @orders.each do |order| %>
            <tr>
                <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                <td>〒<%= order.delivery_postcode %><br/>
                    <%= order.delivery_address %><br/>
                    <%= order.delivery_name %>
                </td>
                <td><% order.order_items.each do |order_item| %>
                    <%= order_item.product.name %><br/>
                    <% end %>
                </td>
                <td><%= order.pay_amount.to_s(:delimited) %></td>
                <td><%= order.status %></td>
                <td><%= link_to "表示する", order_path(order.id), class:"btn btn-success" %></td>
            </tr>
            <% end %>
        </table>
    </div>
</div>