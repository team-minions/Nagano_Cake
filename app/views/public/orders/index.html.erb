<div class="container">
    <div class="row">

        <h4 class="col-md-3 offset-1 bg-active text-center">注文履歴一覧</h4>

        <div class="col-md-12">
            <table class="table-bordered", >
                <tr class="table-active">
                    <td width="120">注文日</td>
                    <td width="400">配送先</td>
                    <td width="150">注文商品</td>
                    <td width="100">支払金額</td>
                    <td width="120">ステータス</td>
                    <td width="120">注文詳細</td>
                </tr>

                <% @orders.each do |order| %>
                <tr>
                    <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                    <td>〒<%= order.delivery_postcode %><br/>
                        <%= order.delivery_address %><br/>
                        <%= order.delivery_name %>
                    </td>
                    <td><% order.order_items.each do |order_item| %>
                        <%= order_item.product.name %><br/>
                        <% end %>
                    </td>
                    <td><%= order.pay_amount.to_s(:delimited) %></td>
                    <td><%= order.status %></td>
                    <td><%= link_to "表示する", order_path(order.id), class:"btn btn-success mx-2" %></td>
                </tr>
                <% end %>
            </table>
        </div>

    </div>
</div>

