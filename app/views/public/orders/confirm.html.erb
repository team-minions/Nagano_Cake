<div class="container">
    <div class="row">
        <div class="">注文情報確認</div>
        <div class="col-8">
            <table>
                <tr>
                    <td>商品名</td>
                    <td>単価(税込)</td>
                    <td>数量</td>
                    <td>小計</td>
                </tr>
                <%= @cart_items.each do |cart_item| %>
                <tr>
                    <td><%= attachment_image_tag Product.find(cart_item.product_id), :image_id, format: 'jpeg', size: "100x100" %><%= Product.find(cart_item.product_id).name %></td>
                    <td><%= Product.find(cart_item.product_id).price %></td>
                    <td><%= cart_item.product_count %></td>
                    <td><%= @subtotals %></td>
                </tr>
                <% end %>
            </table>
        </div>
        <div class="col-4">
            <table>
                <tr>
                    <td>送料</td>
                    <td>800</td>
                </tr>
                <tr>
                    <td>商品合計</td>
                    <td><%= @sum %></td>
                </tr>
                <tr>
                    <td>請求金額</td>
                    <td><%= @pay_amount %></td>
                </tr>
            </table>
        </div>
    </div>
    
    <div class="row">
        <div class="">
            
            <table>
                <tr>
                    <td>支払方法</td>
                    <td><%= @pay_method %></td>
                </tr>
                <tr>
                    <td>お届け先</td>
                    <td>〒<%= @delivery_postcode %><%= @delivery_address %><%= @delivery_name %> </td>
                </tr>
            </table>
            
            <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
              <%= f.hidden_field :pay_method %>
              
              <%= f.submit "注文を確定する", class: "btn btn-success" %>
            <% end %>
            
        </div>
    </div>
</div>