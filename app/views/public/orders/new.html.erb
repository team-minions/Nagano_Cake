<div class="container">
    <div class="row">
        <div class="">
            <%= form_with model: @order, url: orders_confirm_path, method: :post, local: true  do |f| %>
            <div class="">注文情報入力</div>
            
            <div class="pay_method">
                <div class="">支払方法</div>
                <div class="pay_method_form">
                  <%= f.radio_button :pay_method, :"クレジットカード" , checked: true %>
                  <%= f.label :pay_method_credit_card, "クレジットカード" %>
                <div class="pay_method_form">
                  <%= f.radio_button :pay_method, :"銀行振込" %>
                  <%= f.label :pay_method_cash, "銀行振込" %>
                </div>
            </div>

            <div class="deliveries">
                <div class="">お届け先</div>
              　　<div class="delivery_address_form">
                    <%= f.radio_button "address_sellect", "1" , checked: true %>
                    <%= f.label :address_sellect, "ご自身の住所"  %>
                    <%= current_customer.address %>
                  </div>
                  <div class="delivery_address_form">
                    <%= f.radio_button "address_sellect", "2" %>
                    <%= f.label :address_sellect, "登録住所から選択" %>
                      <%= f.collection_select :address, @deliveries, :id, :delivery_together, prompt: "--選択してください--" %>
                  </div>
                  <div class="delivery_address_form">
                    <%= f.radio_button "address_sellect", "3" %>
                    <%= f.label :address_sellect, "新しいお届け先" %>
                      <table>
                          <tr>
                              <td>郵便番号(ハイフンなし)</td>
                              <td><%= f.text_field :delivery_postcode, placeholder: "000000" %></td>
                          </tr>
                          <tr>
                              <td>住所</td>
                              <td><%= f.text_field :delivery_address, placeholder: "東京都渋谷区代々木神園町0-0" %></td>
                          </tr>
                          <tr>
                              <td>宛名</td>
                              <td><%= f.text_field :delivery_name, placeholder: "令和道子" %></td>
                          </tr>
                      </table>
                  </div>
                </div>
            </div>
            
            
            
            <%= f.submit "確認画面へ進む" %>
            <% end %>
            
            
            
            
            
        </div>
    </div>
</div>