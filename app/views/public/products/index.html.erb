

  <body>
    <div class="product-index py-5 bg-light">
      <div class="container">
        <% if @word.nil? %>
          <h2>商品一覧</h2>
        <% else %>
          <h2><%= @word %>:一覧</h2>
        <% end %>
        <h4>全<%= @products.total_count %>件</h4>
          <div class="row">
            <% @products.each do |product| %>
              <div class="col-md-3 mt-5">
                  <div class="image">
                    <%= link_to product_path(product.id) do %>
                      <%= attachment_image_tag product, :image, format: 'jpeg', fallback: "no_image2.jpg", size:'240x160', class: "product_image" %>
                    <% end %>
                  </div>
                  <div class="mt-3">
                    <%= product.name %>
                  </div>
                  <div class="mt-3">
                    ¥<%= product.price.to_s(:delimited) %>
                  </div>
              </div>
            <% end %>
          </div>
          <%= paginate @products %>
      </div>
    </div>
  </body>
  
  
  <%= render 'layouts/genresearch' %>