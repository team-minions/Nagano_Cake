<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>商品一覧</h2>
      <h4>全<%= @products.count %>件</h4>
      <table class="table table-striped">
        <tbody>
          <% @products.each do |product| %>
            <td>
              <tr><%= link_to product_path(product.id) do %>
                <%= attachment_image_tag product, :image, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
              <% end %>
              </tr>
              <tr><%= product.name %></tr>
              <tr>¥<%= product.price  %></tr>
            </td>
          <% end %>
          <%= paginate @products %>
        </tbody>
      </table>
    </div>
  </div>
</div>