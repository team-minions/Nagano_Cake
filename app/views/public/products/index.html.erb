<!DOCTYPE html>
<html>
  <head>
    <title>商品一覧</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'products', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'products', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="product-index py-5 bg-light">
      <div class="container">
        <h2>商品一覧</h2>
        <h4>全<%= @products.total_count %>件</h4>
          <div class="row">
            <% @products.each do |product| %>
              <div class="col-md-3">
                  <div class="image">
                    <%= link_to product_path(product.id) do %>
                      <%= attachment_image_tag product, :image, format: 'jpeg', fallback: "no_image.jpg", size:'240x160' %>
                    <% end %>
                  </div>
                  <div class="product-name">
                    <%= product.name %>
                  </div>
                  <div class="product-price">
                    ¥<%= product.price.to_s(:delimited) %>
                  </div>
              </div>
            <% end %>
          </div>
          <%= paginate @products %>
      </div>
    </div>
  </body>
</html>