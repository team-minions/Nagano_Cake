
  <body>
    <div class="container">
      <div class="row mt-5">
        <div class="col-md-5 mb-5">
              <%= attachment_image_tag @product, :image, format: 'jpeg', fallback: "no_image2.jpg", size:'300x200' %>
        </div>
        <div class="col-md-7 mt-2">
          <h4 class="mt-2"><%= @product.name %></h4>
          <div class="mt-3"><%= @product.description %></div>
          <div class="mt-5">¥<%= (@product.price * @tax).to_i.to_s(:delimited) %>（税込）</div>

          <% if customer_signed_in? %>
            <%= form_for(@cart_item) do |f| %>
              <%= f.select :product_count,  [*1..100], { include_blank: '個数選択' } %>
              <%= f.hidden_field :product_id, :value => @product.id %>
              <%= f.submit 'カートに入れる', class: "btn btn-success m-3" %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </body>
  
  
  
