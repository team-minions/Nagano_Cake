<div class="container">
  <div class="badge badge-light ml-2 my-3">
    <h4>ログイン</h4>
  </div>
  
  <div>
    <p class="badge badge-light ml-4">会員の方はこちらからログイン</p>
  </div>
  
  <div class="mx-auto mt-4">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field text-center">
        <%= f.label :email,"メールアドレス" ,class:"mr-4"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",size:40%>
      </div>
      <div class="field text-center">
        <%= f.label :password,"パスワード　　",class:"mr-4"%>
        <%= f.password_field :password, autocomplete: "current-password",size:40 %>
      </div>
      <div class="actions ml-4 text-center mt-2">
        <%= f.submit "ログイン",class:"btn btn-primary"%>
      </div>
    <% end %>
  </div
  
  <div class="mt-4">
   <p class="badge badge-light ml-4">会員登録がお済みでない方</p>
  <%= render "public/shared/links" %>
  </div>
  
</div>