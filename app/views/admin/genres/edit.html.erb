<div class="container pt-2">
  <h4 class="col-md-3 offset-1 bg-light text-center mt-2">ジャンル編集</h4>

  <%= form_with model:[:admin, @genre], local: true do |f| %>
  <div class="form-group row my-5">
    <label class="col-2 col-form-label">ジャンル名</label>
      <%= f.text_field :name, class: "form-control col-4" %>
      <%= f.submit "変更を保存", class: "btn btn-success btn-sm offset-1" %>
  </div>
  <% end %>
</div>