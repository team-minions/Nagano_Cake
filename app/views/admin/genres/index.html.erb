<div class="container pt-3">
  <h4 class="col-md-3 offset-1 bg-light text-center mt-2">ジャンル一覧・追加</h4>

  <%= form_with model:[:admin, @genre], local: true do |f| %>
  <div class="form-group row my-5">
    <label class="col-2 col-form-label">ジャンル名</label>
      <%= f.text_field :name, class: "form-control col-3", placeholder: "ジャンル名" %>
      <%= f.submit "新規登録", class: "btn btn-success btn-sm offset-1" %>
  </div>
  <% end %>

  <div class="row pt-4">
    <div class="col-5">
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="text-center">ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <thead>
        <% @genres.each do |genre| %>
        <tr class="border-bottom">
          <th class="align-middle"><%= genre.name %></th>
          <th class="text-right"><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success btn-sm" %></th>
        </tr>
        <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>