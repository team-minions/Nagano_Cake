<% if flash[:failed] %>
    <p class="alert alert-danger">
      <%= flash[:failed] %>
    </p>
<% end %>

<div class="container">
  
  <div class="badge badge-light my-4">
    <h3><%= @customer.full_name %>さんの会員情報編集</h3>
  </div>
  
  <%= form_with(model: @customer,url: admin_customer_path,local: true)do |f|%>
  <div class="field row mb-2">
      <div class="col-2">
        <%= f.label :"会員ID"%>
      </div>
      <div class="col-8">
        <%= @customer.id %>
      </div>
  </div>
  <div class="field row mb-2">
      <div class="col-2">
        <%= f.label :"氏名"%>
      </div>
      <div class="col-8">
        <%= f.text_field :last_name%><%= f.text_field :first_name,class:"ml-4"%>
      </div>
  </div>
  <div class="field row mb-2">
      <div class="col-2">
        <%= f.label :"フリガナ"%>
      </div>
      <div class="col-8">
         <%= f.text_field :furigana_last_name%><%= f.text_field :furigana_first_name,class:"ml-4"%>
      </div>
  </div>
  <div class="field row mb-2">
      <div class="col-2">
        <%= f.label :"郵便番号"%>
      </div>
      <div class="col-8">
         <%= f.text_field :postcode%>
      </div>
  </div>
  <div class="field row mb-2">
      <div class="col-2">
         <%= f.label :"住所"%>
      </div>
      <div class="col-8">
         <%= f.text_field :address,size:60%>
      </div>
  </div>
  <div class="field row mb-2">
      <div class="col-2">
          <%= f.label :"電話番号"%>
      </div>
      <div class="col-8">
        <%= f.text_field :phone_number%>
      </div>
  </div>
  <div class="field row mb-2">
      <div class="col-2">
         <%= f.label :"メールアドレス"%>
      </div>
      <div class="col-8">
        <%= f.email_field :email%>
      </div>
  </div>
  <div class="field row mb-2">
      <div class="col-2">
         <%= f.label :"会員ステータス"%>
      </div>
      <div class="col-8">
          <%= f.radio_button :is_deleted, :false, checked: true %>
          <%= f.label :is_deleted,"有効", {value: :false, style: "display: inline-block;"} %>
          <%= f.radio_button :is_deleted, :true %>
   　　　　<%= f.label :is_deleted,"退会", {value: :true, style: "display: inline-block;"} %><br/>
          <%= f.submit "変更を保存",class:"btn btn-success mt-4"%>
      </div>
  </div>
<%end%>