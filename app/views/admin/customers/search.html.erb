<div class="container">
  <div class="row col-10 mx-auto">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th class="kensaku">検索結果</th>
        </tr>
      </thead>
    <% if @range == '1' %>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td class="text-right">
              <%= link_to admin_customers_path(customer.id) do %>
              <%= customer.last_name %>
              <% end %>
            </td>
            <td>
              <%= customer.first_name %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <% elsif @range == '2' %>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td class="text-center">
              <%= link_to admin_prodcuts_path(product.id) do %>
              <%= item.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
      </tbody>
      <% else @range == '3' %>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td class="text-center">
              <%= link_to edit_admin_genre_path(genre.id) do %>
              <%= genre.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
      </tbody>
    <% end %>
    </table>
  </div>
</div>