<div class="container">
  <div class="row">
    <h3>注文履歴一覧</h3>
      <table class="table mx-auto col-10">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link.to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_oder_path(order.id) %></td>
            <td><%= order.customer.last_name %><%= order.customer.fist_name %></td>
            <td><%= order.order_items.sum(:product_count) %></td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%# ここにkaminari利用 %>
  </div>
</div>