<% if flash[:danger] %>
    <p class="alert alert-danger">
      <%= flash[:danger] %>
    </p>
  <% end %>
  
<div class="container">
  
  <div class="badge badge-light ml-2 my-3">
  <h4>管理者ログイン</h4>
  </div>

  <div class="mx-auto mt-4">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field text-center">
    <%= f.label :email,"メールアドレス",class:"mr-4"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",size:40%>
  </div>

  <div class="field text-center">
    <%= f.label :password,"パスワード　　",class:"mr-4"%>
    <%= f.password_field :password, autocomplete: "current-password",size:40%>
  </div>
  </div>

  <div class="actions text-center">
    <%= f.submit "ログイン",class:"btn btn-primary"%>
  </div>
<% end %>

</div>