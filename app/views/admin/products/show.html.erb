<div class="container pt-3">
  <h4 class="col-md-3 offset-1 bg-light text-center mt-2">商品詳細</h4>

  <div class="row pt-4">
    <div class="col-3 offset-1">
      <%= attachment_image_tag(@product, :image, :fill, 300, 300, fallback: "no_image2.jpg", size:'200x200', class:"img-fluid") %>
    </div>
    <div class="col-5">
      <table class="table table-borderless">
        <tbody>
        <tr>
          <td>商品名</td>
          <td><%= @product.name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= @product.description %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @product.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br>(税抜価格)</td>
          <td>
            <%= @product.add_tax_price.to_s(:delimited) %>( <%= @product.price.to_s(:delimited) %>)円
          </td>
        </tr>
        <tr>
            <td>販売ステータス</td>
            <% if @product.is_active == false %>
              <td class="text-success">販売中</td>
            <% elsif @product.is_active == true %>
              <td class="text-secondary">売切れ</td>
            <% end %>
        </tr>
        </tbody>
      </table>
      <%= link_to "編集する", edit_admin_product_path(@product), class:"btn btn-success my-2" %>
    </div>
  </div>
</div>