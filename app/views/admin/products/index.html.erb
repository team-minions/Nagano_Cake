<div class="container pt-3">
  <div class="row">
    <h3 class="col-md-3 offset-1 bg-light text-center mt-2">商品一覧</h3>
  </div>
  <div class="row offset-10">
  <%= link_to  new_admin_product_path, class: 'btn btn-default rounded-circle' do %>
    <i class="far fa-edit"></i>
  <% end %>
  </div>

    <div class="row pt-4">
      <table class="table col-md-10 mx-auto table-hover">
        <thead>
          <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
              <td><%= product.id %></td>
              <td><%= link_to product.name, admin_product_path(product.id) %></td>
              <td><%= product.price.to_s(:delimited) %></td>
              <td><%= product.genre.name %></td>
              <% if product.is_active == false %>
                <td class="text-success">販売中</td>
              <% elsif product.is_active == true %>
                <td class="text-secondary">売切れ</td>
              <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="row justify-content-center"><%= paginate @products %></div>
</div>