<div class="container pt-3">
    <h4 class="col-md-3 offset-1 bg-light text-center mt-2">注文履歴詳細</h4>
    
    <div class="row">
      <table>
        <tbody>
          <tr>
            <th>購入者</th>
            <td>
              <%= link.to @order.customer.full_name, admin_customer_path(@order.customer) %>
            </td>
            <td></td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
            <td></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>〒<%= @order.delivery_postcode %> <%= @order.delivery_address %></td><br>
            <td><%= @order.delivery_name %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.pay_method %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
              <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
                <!--モデル名.カラム名複数形.keysで設定したenum呼び出す-->
                <td><%= f.select :status, Order.statuses.keys.to_a %></td>
                <td><%= f.subimt "更新",　class: "btn btn-success btn-sm" %></td>
              <% end %>
          </tr>
      </tbode>
    </div>
    
    <div class="row">
      <table class="table col-md-6">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.product.name %></td>
            <td><%= order_item.price %></td>
            <td><%= order_item.product_count %></td>
            <td><%= order_item.price * order_item.product_count %></td>
            <%= form_with model: order_item, url: admin_order_item_path(order_item.order, order_item), local: true do |f| %>
              <td><%= f.select :making_status, OrderItem.making_statuses.keys.to_a %></td>
              <td><%= f.subimt "更新",　class: "btn btn-success btn-sm" %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
     <table class="table col-md-3 offset-md-1">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= @order.pay_amount %>円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @order.shipping_fee %>円</td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <td><%= @order.pay_amount += @order.shipping_fee %>円</td>
          </tr>
        </tbody>
      </table>
  </div>

</div>